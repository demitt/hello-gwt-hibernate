<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
<ui:with field="i18n" type="ua.demitt.homework.hellogwthibernate.client.i18n.Constants" />
    <g:HorizontalPanel width="100%" horizontalAlignment="ALIGN_CENTER">
        <g:HorizontalPanel>
            <g:cell>
                <g:VerticalPanel width="130px">
                    <g:HTML height="30px">
                        <ui:text from="{i18n.loginUser}:"/>
                    </g:HTML>
                    <g:HTML>
                        <ui:text from="{i18n.loginPassword}:"/>
                    </g:HTML>
                </g:VerticalPanel>
            </g:cell>

            <g:cell>
                <g:VerticalPanel>
                    <g:cell height="30px">
                        <g:TextBox ui:field="login"/>
                    </g:cell>
                    <g:cell height="30px">
                        <g:PasswordTextBox ui:field="password" />
                    </g:cell>
                    <g:cell>
                        <g:Button ui:field="loginButton" text="{i18n.loginButton}" />
                    </g:cell>
                </g:VerticalPanel>
            </g:cell>
        </g:HorizontalPanel>
    </g:HorizontalPanel>
</ui:UiBinder>